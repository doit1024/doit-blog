---
import { Image } from 'astro:assets';

import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import cuteBear from "@/assets/images/cute_bear.png";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-app flex-1 items-center justify-center"
  >
    <div class="my-10 flex flex-col items-center justify-center md:my-0">
      <h1 class="text-6xl font-bold text-accent">什么都没有</h1>

      <Image src={cuteBear} alt="A Cute Bear." height="400" />

      <LinkButton
        href="/"
        class="mt-6 text-lg underline decoration-dashed underline-offset-8"
      >
        返回首页
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
